@model MusicServiceDomain.Model.Album

@{
    ViewData["Title"] = "Видалити";
}

<br />
<h1>Видалити</h1>

<div>
    <h4>Альбом</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    <p class="text-danger">Ви впевнені, що хочете видалити цей альбом?</p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-secondary" /> |
        <a asp-action="Index" class="btn btn-outline-dark">Повернутися до списку</a>
    </form>
</div>
<br />
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var modelState in ViewData.ModelState.Values)
        {
            foreach (var error in modelState.Errors)
            {
                @error.ErrorMessage

                <br />
            }
        }
    </div>
}

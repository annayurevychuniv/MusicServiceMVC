@model MusicServiceDomain.Model.Song

@{
    ViewData["Title"] = "Видалити";
}

<br />
<h1>Видалити</h1>

<div>
    <h4>Пісня</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

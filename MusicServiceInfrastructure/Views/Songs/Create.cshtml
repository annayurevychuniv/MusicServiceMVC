@model MusicServiceDomain.Model.Song

@{
    ViewData["Title"] = "Create";
}

<br />
<h1>Створити</h1>

<h4>Пісня</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongsArtists" class="control-label"></label>
                <select asp-for="SongsArtists" class="form-control" asp-items="ViewBag.SongsArtists" multiple="multiple"></select>
                <span asp-validation-for="SongsArtists" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongsGenres" class="control-label"></label>
                <select asp-for="SongsGenres" class="form-control" asp-items="ViewBag.SongsGenres" multiple="multiple"></select>
                <span asp-validation-for="SongsGenres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LyricsId" class="control-label"></label>
                <select asp-for="LyricsId" class="form-control" asp-items="ViewBag.LyricsId"></select>
                <span asp-validation-for="LyricsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-outline-dark">Повернутися до списку</a>
            </div>
        </form>
    </div>
</div>
@if (ViewData["FieldsWithErrors"] != null)
{
    <p>Слідуючі поля містять помилки:</p>
    <ul>
        @foreach (var fieldWithError in ViewData["FieldsWithErrors"] as List<string>)
        {
            <li>@fieldWithError</li>
        }
    </ul>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model MusicServiceDomain.Model.Lyric

@{
    ViewData["Title"] = "Видалити";
}

<br />
<h1>Видалити</h1>
<div>
    <h4>Текст</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Text.Replace("\n", "<br/>"))
        </dd>
    </dl>
    <p class="text-danger">Ви впевнені, що хочете видалити цей текст?</p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-secondary" /> |
        <a asp-action="Index" class="btn btn-outline-dark">Повернутися до списку</a>
    </form>
</div>